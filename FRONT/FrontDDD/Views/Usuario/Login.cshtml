@model FrontDDD.Models.UserViewModel

@{
    ViewData["Title"] = "Login";
}

<style>

    .fontes {
        font-family: HelveticaNeue-Bold, Arial, Helvetica, sans-serif, Arial !important;
        margin-top: 40px !important;
        margin-left: 12px !important;
        margin-right: 13px !important;
        font-size: 24px !important;
        font-weight: bold !important;
        color: #5E5E5E !important;
    }

    .form-control {
        position: relative;
        font-size: 16px;
        height: auto;
        width: 100%;
        padding: 10px 10px 5px 0;
        margin: 0 0 10px 0;
        border-top-color: #FFFFFF;
        border-left-color: #FFFFFF;
        border-right-color: #FFFFFF;
        border-radius: 0;
    }
    .btn-primary{
        font-size: 19px;
        color:white;
        text-align: center;
        font-weight: bold;
        font-family: Arial, Helvetica, sans-serif;
        border-radius:3px;
        outline: none !important;
        box-shadow: none !important;
    }
</style>


<div class="row ">
    <div class="col-md-4  offset-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <h2 class="fontes">Faça o Login</h2>

            </div>
            <div class="form-group">

                <input asp-for="Username" class="form-control" placeholder="Usuário" autofocus required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Password" class="form-control" placeholder="Senha" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <input type="submit" value="entrar" class="btn btn-primary btn-block" />
            </div>
            <a asp-action="create">Criar conta</a>
        </form>
    </div>
</div>



